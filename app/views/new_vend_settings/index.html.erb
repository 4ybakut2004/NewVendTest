<% provide(:title, 'Settings') %>

<script type="text/javascript">
	$(document).ready(function() {
		$('li#settings').addClass('active');
	});
</script>

<div class="content">
  <h1>Настройки системы</h1>

  <hr>

  <form ng-submit="updateSettings()" class="form-horizontal">

    <div class="row">
  		<div class="col-md-2"></div>
  		<div class="col-md-8">
  			<div class="alert alert-success" ng-show="success">
				  <button type="button" class="close" ng-click="success=false;">&times;</button>
				  <strong>Успех!</strong> Настройки обновлены.
				</div>
				<div class="alert alert-warning" ng-show="error">
				  <button type="button" class="close" ng-click="error=false;">&times;</button>
				  <strong>Ошибка!</strong> Настройки не обновлены.
				</div>
  		</div>
    </div>

    <div class="form-group">
      <label class="col-sm-4 control-label" for="readConfirmTime">Время подтверждения прочтения (минут)</label>
      <div class="col-sm-6">
        <input id="readConfirmTime"
          type="number"
          ng-model="editingReadConfirmTime"
          class="form-control">
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-sm-6">
        <input type="submit" value="Сохранить" class="btn btn-primary">
      </div>
    </div>

  </form>
</div>