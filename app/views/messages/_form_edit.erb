<div id="message">
  <div class="row" id="edit-label">
    <div class="col-md-10 text-center"><h1>Тип сигнала <%= @message.id %></h1></div>
  </div>

  <%= form_for(@message, remote: true, :html => {:class => "form-horizontal"}) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Наименование", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :request_type, "Тип заявки", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :request_type, options_for_select(Request.request_types.map { |k, v| [ v, k ] }, :selected => @message.request_type), {}, { :class => "form-control" } %>
      </div>
    </div>

    <div class="text-center"><%= f.submit "Подтвердить", class: "btn btn-primary" %></div>
  <% end %> 

  <br>

  <div class="row">
    <% if @message.tasks.size != 0 %>
    <div class="col-md-4">
      <table class="table table-striped table-hover table-condensed table-bordered">
        <thead>
          <tr><th>Типы поручений</th></tr>
        </thead>
        <tbody>
          <% @message.tasks.each do |task| %>
          <tr><td> <%= task.name %> </td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% end %>
  </div> 
</div>