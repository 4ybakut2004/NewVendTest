<h1>Типы сигналов</h1>

<div class="btn-group" style="margin-bottom: 15px;">
  <button type="button"
    class="btn btn-default"
    data-toggle="modal" 
    data-target="#newMessage"
    ng-click="resetNewMessage()">
    Создать
  </button>
  <button type="button" class="btn btn-default" ng-click="deleteMessages()">Удалить</button>
</div>

<div fixedheader class="standart-table-container" ng-show="!editing">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th></th>
        <th>Номер</th>
        <th>Наименование</th>
        <th>Решатель</th>
        <th>Описание</th>
      </tr>
      <tr>
        <td></td>
        <td><input ng-model="search.id" class="form-control input-sm" ng-change="changeWidth()"></td>
        <td><input ng-model="search.name" class="form-control input-sm" ng-change="changeWidth()"></td>
        <td><input ng-model="search.solver_name" class="form-control input-sm" ng-change="changeWidth()"></td>
        <td><input ng-model="search.description" class="form-control input-sm" ng-change="changeWidth()"></td>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat="message in messages | filter:search">
        <td><input type="checkbox" ng-model="message.checked"></td>
        <td ng-click="clickMessage($index)">{{message.id}}</td>
        <td ng-click="clickMessage($index)">{{message.name}}</td>
        <td ng-click="clickMessage($index)">{{message.solver_name}}</td>
        <td ng-click="clickMessage($index)">{{message.description}}</td>
      </tr>
    </tbody>
  </table>
</div>