<div id="message_task">
  <div class="row" id="edit-label">
    <div class="col-md-10 text-center"><h1>Поручение <%= @message_task.id %></h1></div>
  </div>

  <%= form_for(@message_task, remote: true, :html => {:class => "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :executor_id, "Исполнитель", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :executor_id, options_for_select([['', nil]] + Employee.all.map { |k| [ k.name, k.id ] }, :selected => (@message_task.executor ? @message_task.executor.id : nil)), {}, { :class => "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :auditor_id, "Контролер", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :auditor_id, options_for_select([['', nil]] + Employee.all.map { |k| [ k.name, k.id ] }, :selected => (@message_task.auditor ? @message_task.auditor.id : nil)), {}, { :class => "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Описание", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :execution_date, "Дата выполнения", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_field :execution_date, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :audition_date, "Дата проверки", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_field :audition_date, :class => "form-control" %>
      </div>
    </div>

    <%= f.submit "Подтвердить", class: "btn btn-primary" %>
  <% end %>  
</div>