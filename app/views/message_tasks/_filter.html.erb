<%= form_tag(message_tasks_path, method: "get", :class => "form-horizontal") do %>
	<div class="form-group">
		<%= label_tag(:request_id, "Номер заявки", :class => "col-sm-2 control-label") %>
		<div class="col-sm-10">
  			<%= select_tag(:request_id, options_for_select(Request.all.collect {|m| [m.id, m.id]}.unshift(["Все", nil]), :selected => @request_id ), { :class => "form-control" }) %>	
		</div>
	</div>
	<div class="form-group">
		<%= label_tag(:action_type, "Тип поручения", :class => "col-sm-2 control-label") %>
		<div class="col-sm-10">
  		<%= select_tag(:action_type, options_for_select([["Все", "all"],["Созданные мной", "my"],["Порученные мне", "to_me"],["Для контроля", "to_audit"]], :selected => @action_type), { :class => "form-control" }) %>	
		</div>
	</div>
  
  	<%= submit_tag("Искать", class: "btn btn-primary") %>
<% end %>