<form ng-submit="createAttribute()" class="form-horizontal">
  <div class="form-group" ng-class='{"has-warning": !inputs.name, "has-success": inputs.name}'>
    <label class="col-sm-4 control-label" for="name">Наименование</label>
    <div class="col-sm-8">
      <input id="name" type="text" ng-model='newName' placeholder="Введите наименование" class="form-control" ng-required="true">
    </div>
  </div>

  <div class="form-group" ng-class='{"has-warning": !inputs.attributeType, "has-success": inputs.attributeType}'>
    <%= label_tag :attribute_type, "Тип атрибута", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= select_tag :attribute_type, options_for_select(Attribute.attribute_types.map {|k, v| [ v, k ] }), :class => "form-control", "ng-model" => "newAttributeType", "ng-required" => true %>
    </div>
  </div>

  <h3 class="text-center">Типы сигналов</h3>
  <ul class="non-point">
      <li ng-repeat="message in messages">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default" ng-click="check(message)">
          <input type="checkbox"> {{message.name}}
        </label>
      </div>
      </li>
  </ul>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-8"><input type="submit" value="Создать" class="btn btn-primary"></div>
  </div>
</form>

