<header>
  <div class="navbar">
    <div class="logo">
        <%= link_to "Новый Вендинг", root_path, id: "logo" %>
    </div>
    <nav>
      <ul class="nav">
        <li><%= link_to "Главная", root_path %></li>
        <li><%= link_to "Помощь",  help_path %></li>

        <% if signed_in? %>
            <li><%= link_to "Выйти", signout_path, method: "delete" %></li>
        <% else %>
            <li><%= link_to "Войти", signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  <% if signed_in? %>
      <div class="user-menu">
        <div>Меню пользователя <%= current_user.name %></div> 
        <ul>
          <li><%= link_to "Оформить заявку", new_request_path %></li>
          <li><%= link_to "Мой профиль",     user_path(current_user.id) %></li>
        </ul>
      </div>
  <% end %>
</header>