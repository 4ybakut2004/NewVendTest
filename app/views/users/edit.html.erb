<% provide(:title, @user.name) %>

<script type="text/javascript">
	$(document).ready(function() {
		$('#user-page').addClass('active');
	});
</script>

<div class="content">
	<div id="success-msg"></div>
	<div id="user">
		<div class="row" id="edit-label">
		    <div class="col-md-10 text-center"><h1>Пользователь <%= @user.id %></h1></div>
		</div>

		<%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
		    <div class="form-group">
		      <%= f.label :employee_id, "Сотрудник", :class => "col-sm-2 control-label" %>
		      <div class="col-sm-10">
		        <%= f.select :employee_id, options_for_select([["", nil]] + Employee.all.collect { |e| [e.name, e.id] }, :selected => @user.employee ? @user.employee_id : nil), {}, {:class => "form-control"} %>
		      </div>
		    </div>

		    <div class="text-center"><%= f.submit "Подтвердить", class: "btn btn-primary" %></div>
		<% end %> 
	</div>
</div>
