<h1>Пользователи</h1>

<div class="table-responsive standart-table-container" ng-show="!editing">
<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Логин</th>
      <th>Полное имя</th>
    </tr>
    <tr>
      <td><input ng-model="search.id" class="form-control" placeholder="Поиск по номеру"></td>
      <td><input ng-model="search.name" class="form-control" placeholder="Поиск по логину"></td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <tr ng-repeat="user in users | filter:search">
      <td ng-click="clickUser($index)">{{user.id}}</td>
      <td ng-click="clickUser($index)">{{user.name}}</td>
      <td ng-click="clickUser($index)">{{user.employee.name}}</td>
    </tr>
  </tbody>
</table>
</div>