<form ng-submit="createRequest()" class="form-horizontal">
  <div class="text-center">
    <% Request.request_types.each do |key, value| %>
    <button type="button" class="btn btn-default" ng-class='{active: newRequestType == "<%= key %>"}' ng-click='setNewRequestType("<%= key %>")'><%= value %></button>
    <% end %>
  </div><br>

  <div class="form-group" ng-class='{"has-warning": !inputs.machineId, "has-success": inputs.machineId}' ng-show="inputs.requestType">
    <label class="col-sm-3 control-label" for="machine_id">Автомат</label>
    <div class="col-sm-9">
      <select ng-model="newMachineId" 
        ng-options="machine.id as machine.name for machine in machines"
        class="form-control">
      </select>
    </div>
  </div>

  <div class="form-group" ng-class='{"has-success": inputs.phone}' ng-show='newRequestType=="phone"'>
    <label class="col-sm-3 control-label" for="phone">Телефон</label>
    <div class="col-sm-9">
      <input id="phone" type="text" ng-model='newPhone' placeholder="Введите номер телефона" class="form-control">
    </div>
  </div>

  <div class="text-center" ng-show="inputs.requestType">
    <button style="margin: 5px;" ng-repeat="message in messages | filter:{request_type: newRequestType}" type="button" class="btn btn-default" ng-click="addMessage(message)">{{message.name}}</button>
    <button style="margin: 5px;" type="button" class="btn btn-default" ng-click="otherInput()" ng-class="{active: showOther}">Другое</button>
  </div>

  <div class="form-group" ng-class='{"has-success": inputs.phone}' ng-show='showOther'>
    <label class="col-sm-3 control-label" for="description">Описание</label>
    <div class="col-sm-9">
      <input id="description" type="text" ng-model='newDescription' placeholder="Введите описание" class="form-control">
    </div>
  </div>

  <div class="row" ng-show="newMessages.length">
    <div class="col-md-12"><h4>Создадутся сигналы:</h4></div>
  </div>

  <div class="panel panel-default" ng-repeat="message in newMessages track by $index">
    <div class="panel-heading">
      <span>{{message.name}}</span>
      <button type="button" class="close" ng-click="deleteMessage($index)">&times;</button>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <small>
          <ul class="non-point">
            <li ng-repeat="attribute in message.attributes">
              <label for="{{attribute.id}}">{{attribute.name}}</label>
              <input type="{{inputType(attribute.attribute_type)}}" class="form-control input-sm" id="{{attribute.id}}" ng-model="attribute.value">
            </li>
          </ul>
          </small>
        </div>
        <div class="col-md-6">
          <small>
          <ul class="non-point">
            <li><label>Поручения</label></li>
            <li ng-repeat="task in message.tasks">
              {{task.name}}
            </li>
          </ul>
          </small>
        </div>
      </div>
    </div>
  </div>

  <div class="row form-footer" ng-show="inputs.requestType">
    <div class="col-sm-12 text-right"><input type="submit" value="Создать" class="btn btn-primary"></div>
  </div>
</form>

