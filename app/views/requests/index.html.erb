<% provide(:title, 'Requests') %>

<script type="text/javascript">
  $(document).ready(function() {
    $('li#requests').addClass('active');
  });
</script>

<div class="modal fade" id="newRequest" tabindex="-1" role="dialog" aria-labelledby="newRequestLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-button" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newRequestLabel">Новая заявка</h4>
      </div>
      <div class="modal-body">
        <%= render 'form_new' %>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <%= render 'all' %>
  <%= render 'form_edit' %>
</div>