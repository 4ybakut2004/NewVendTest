<div ng-show="editing" class="border-top">
  <button type="button" class="close" ng-click="editing=false">&times;</button>
  <h1 class="text-center">Тип заявки {{editingId}}</h1>
  <form ng-submit="updateRequestType()" class="form-horizontal">

    <div class="form-group"
      ng-class='{"has-warning": !editingInputs.name, "has-success": editingInputs.name}'>
      <label class="col-sm-2 control-label" for="name">Наименование</label>
      <div class="col-sm-8">
        <input id="name"
          type="text"
          ng-model='editingName'
          placeholder="Введите наименование"
          class="form-control"
          ng-required="true">
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
        <input type="submit" value="Сохранить" class="btn btn-primary">
        <button type="button" class="btn btn-primary" ng-click="editing=false">Отмена</button>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <h4 style="margin-top: 0px;">Типы сигналов</h4>
        <ul class="non-point">
          <li ng-repeat="message in requestTypeMessages | filter:existsFilter">
            <button type="button"
              class="btn btn-default active"
              ng-click="changeRequestTypeMessage(message)">
              {{message.name}}
            </button>
          </li>
          <li ng-repeat="message in requestTypeMessages | filter:notExistsFilter">
            <button type="button"
              class="btn btn-default"
              ng-click="changeRequestTypeMessage(message)">
              {{message.name}}
            </button>
          </li>
        </ul>
      </div>
    </div>
  </form>
</div>