<div id="employee">
  <div class="row" id="edit-label">
    <div class="col-md-10 text-center"><h1>Сотрудник <%= @employee.id %></h1></div>
  </div>

  <%= form_for(@employee, remote: true, :html => {:class => "form-horizontal"}) do |f| %> 
    <div class="form-group">
      <%= f.label :name, "Имя", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="text-center"><%= f.submit "Подтвердить", class: "btn btn-primary" %></div>
  <% end %> 
</div>