<div ng-show="editing" class="border-top">
<button type="button" class="close" ng-click="closeEditing()">&times;</button>
  <h1 class="text-center">Сотрудник {{editingId}}</h1>
  <form ng-submit="updateEmployee()" class="form-horizontal">

    <div class="form-group" 
      ng-class='{"has-warning": !editingInputs.name && !editingErrors.name,
                 "has-success": editingInputs.name  && !editingErrors.name,
                 "has-error":   editingErrors.name}'>
      <label class="col-sm-2 control-label" for="name">Имя</label>
      <div class="col-sm-8">
        <input id="name"
          type="text"
          ng-model='editingName'
          placeholder="Введите имя"
          class="form-control">
        <div class="alert alert-danger alert-field" ng-show="editingErrors.name">
          {{editingErrors.name}}
        </div>
      </div>
    </div>

    <!--<div class="alert alert-warning"
      ng-show="editingErrors.email">
      <button type="button" class="close" ng-click="editingErrors.email=false">&times;</button>
      <strong>Внимание!</strong> Введите корректный адрес, пожалуйста.<br>
      Адрес должен иметь вид <strong>имя_пользователя@имя_домена</strong>.<br>
      Допустимые символы: «-», «.», «0..9», «@», «A..Z», «_» и «a..z».
    </div>-->

    <div class="form-group"
      ng-class='{"has-success": editingInputs.email && !editingErrors.email,
                 "has-error":   editingErrors.email}'>
      <label class="col-sm-2 control-label" for="email">Электронная почта</label>
      <div class="col-sm-8">
        <input id="email"
          type="text"
          ng-model='editingEmail'
          placeholder="Введите электронную почту"
          class="form-control">
        <div class="alert alert-danger alert-field" ng-show="editingErrors.email">
          {{editingErrors.email}}
        </div>
      </div>
    </div>

    <div class="form-group" ng-class='{"has-success": editingInputs.phone}'>
      <label class="col-sm-2 control-label" for="phone">Номер телефона</label>
      <div class="col-sm-8">
        <input id="phone"
          type="text"
          ng-model='editingPhone'
          placeholder="Введите номер телефона"
          class="form-control">
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
        <input type="submit" value="Сохранить" class="btn btn-primary">
        <button type="button" class="btn btn-primary" ng-click="closeEditing()">Отмена</button>
      </div>
    </div>
  </form>
</div>