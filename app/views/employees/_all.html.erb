<h1>Сотрудники</h1>

<div class="btn-group" style="margin-bottom: 15px;">
  <button type="button" class="btn btn-default" data-toggle="modal" data-target="#newEmployee">Создать</button>
  <button type="button" class="btn btn-default" ng-click="deleteEmployees()">Удалить</button>
</div>

<div fixedheader class="standart-table-container" ng-show="!editing">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th></th>
        <th>Номер</th>
        <th>Имя</th>
      </tr>
      <tr>
        <td></td>
        <td><input ng-model="search.id" class="form-control input-sm"></td>
        <td><input ng-model="search.name" class="form-control input-sm"></td>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat="employee in employees | filter:search">
        <td><input type="checkbox" ng-model="employee.checked"></td>
        <td ng-click="clickEmployee($index)">{{employee.id}}</td>
        <td ng-click="clickEmployee($index)">{{employee.name}}</td>
      </tr>
    </tbody>
  </table>
</div>