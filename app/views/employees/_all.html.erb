<h1 style="display: inline-block;">Сотрудники</h1><br>

<div class="btn-group" style="margin-bottom: 15px;">
  <button type="button" class="btn btn-default" data-toggle="modal" data-target="#newEmployee">Создать</button>
  <button type="button" class="btn btn-default" ng-click="deleteEmployees()">Удалить</button>
</div>

<div class="table-responsive standart-table-container" ng-show="!editing">
<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Номер</th>
      <th>Имя</th>
    </tr>
  </thead>

  <tbody>
    <tr ng-repeat="employee in employees">
      <td><input type="checkbox" ng-model="employee.checked"></td>
      <td ng-click="clickEmployee($index)">{{employee.id}}</td>
      <td ng-click="clickEmployee($index)">{{employee.name}}</td>
    </tr>
  </tbody>
</table>
</div>

<div ng-show="editing" class="border-top">
<button type="button" class="close" ng-click="editing=false">&times;</button>
  <h1 class="text-center">Сотрудник {{editingId}}</h1>
  <form ng-submit="updateEmployee()" class="form-horizontal">
    <div id="name" class="form-group" ng-class='{"has-warning": !editingInputs.name, "has-success": editingInputs.name}'>
      <label class="col-sm-2 control-label" for="name">Имя</label>
      <div class="col-sm-8">
        <input id="name" type="text" ng-model='editingName' placeholder="Введите имя" class="form-control" ng-required="true">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8"><input type="submit" value="Сохранить" class="btn btn-primary"></div>
    </div>
  </form>
</div>