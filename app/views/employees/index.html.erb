<% provide(:title, 'Employees') %>

<script type="text/javascript">
	$(document).ready(function() {
		$('li#employees').addClass('active');
	});

</script>

<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-button" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newModalLabel">Новый сотрудник</h4>
      </div>
      <div class="modal-body">
        <div id="error-msg"></div>
        <%= render 'form_new' %>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div id="success-msg"></div>
  <%= render 'all' %>
</div>

<!-- ANGULARGS -->

<div class="modal fade" id="newEmployee" tabindex="-1" role="dialog" aria-labelledby="newEmployeeLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-button" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newEmployeeLabel">Новый сотрудник</h4>
      </div>
      <div class="modal-body">
        <div ng-show="requestError" class="alert alert-warning alert-dismissable">
          <button type="button" class="close" ng-click="requestError=false">&times;</button>
          <strong>Warning!</strong> Проблемы с соединением. Пожалуйста, попробуйте позже.
        </div>
        <div ng-show="fieldsError" class="alert alert-danger alert-dismissable">
          <button type="button" class="close" ng-click="fieldsError=false">&times;</button>
          <strong>Darger!</strong> !!!!!!!
        </div>
        <form ng-submit="createEmployee()" class="form-horizontal">
          <div id="name" class="form-group">
            <label class="col-sm-2 control-label" for="name">Имя</label>
            <div class="col-sm-10">
              <input id="name" type="text" ng-model='newName' placeholder="Введите имя" class="form-control">
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10"><input type="submit" value="Создать" class="btn btn-primary"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <h1 style="display: inline-block;">Сотрудники</h1><br>

  <div class="btn-group" style="margin-bottom: 15px;">
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#newEmployee">Создать</button>
    <button type="button" class="btn btn-default" ng-click="deleteEmployees()">Удалить</button>
  </div>

  <div class="table-responsive standart-table-container">
  <table class="table table-striped table-hover table-condensed table-bordered">
    <thead>
      <tr>
        <th></th>
        <th>Номер</th>
        <th>Имя</th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat="employee in employees">
        <td><input type="checkbox" ng-model="employee.checked"></td>
        <td>{{employee.id}}</td>
        <td>{{employee.name}}</td>
      </tr>
    </tbody>
  </table>
  </div>

</div>


