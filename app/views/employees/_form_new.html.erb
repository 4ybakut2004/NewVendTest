<form ng-submit="createEmployee()" class="form-horizontal">

  <div class="form-group" ng-class='{"has-warning": !inputs.name, "has-success": inputs.name}'>
    <label class="col-sm-3 control-label" for="name">Имя</label>
    <div class="col-sm-9">
      <input id="name"
        type="text"
        ng-model='newName'
        placeholder="Введите имя"
        class="form-control"
        ng-required="true">
    </div>
  </div>

  <div class="form-group" ng-class='{"has-success": inputs.email}'>
    <label class="col-sm-3 control-label" for="email">Электронная почта</label>
    <div class="col-sm-9">
      <input id="email"
        type="text"
        ng-model='newEmail'
        placeholder="Введите электронную почту"
        class="form-control">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
      <input type="submit" value="Создать" class="btn btn-primary">
    </div>
  </div>
</form>