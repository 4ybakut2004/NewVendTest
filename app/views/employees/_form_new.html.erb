<form ng-submit="createEmployee()" class="form-horizontal">

  <div class="form-group"
    ng-class='{"has-warning": !inputs.name && !inputsErrors.name,
               "has-success": inputs.name  && !inputsErrors.name,
               "has-error":   inputsErrors.name}'>
    <label class="col-sm-4 control-label" for="name">Имя</label>
    <div class="col-sm-8">
      <input id="name"
        type="text"
        ng-model='newName'
        placeholder="Введите имя"
        class="form-control">
      <div class="alert alert-danger alert-field" ng-show="inputsErrors.name">
        {{inputsErrors.name}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-8">
      
    </div>
  </div>

  <div class="form-group"
    ng-class='{"has-success": inputs.email && !inputsErrors.email,
               "has-error":   inputsErrors.email}'>
    <label class="col-sm-4 control-label" for="email">Электронная почта</label>
    <div class="col-sm-8">
      <input id="email"
        type="text"
        ng-model='newEmail'
        placeholder="Введите электронную почту"
        class="form-control">
      <div class="alert alert-danger alert-field" ng-show="inputsErrors.email">
        {{inputsErrors.email}}
      </div>
    </div>
  </div>

  <div class="form-group" ng-class='{"has-success": inputs.phone}'>
    <label class="col-sm-4 control-label" for="phone">Номер телефона</label>
    <div class="col-sm-8">
      <input id="phone"
        type="text"
        ng-model='newPhone'
        placeholder="Введите номер телефона"
        class="form-control">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-8">
      <input type="submit" value="Создать" class="btn btn-primary">
    </div>
  </div>
</form>