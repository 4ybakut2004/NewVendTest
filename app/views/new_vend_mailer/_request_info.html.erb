<p>
  <strong>Тип:</strong> <%= @request_task_attrs["task_name"] %>
</p>
<p>
  <strong>Номер поручения:</strong> <%= @request_task.id %>
</p>
<p>
  <strong>Номер автомата:</strong> <%= @request_task_attrs["machine_name"] %>
</p>

<% if @request_task.creation_date %>
  <p>
    <strong>Дата создания:</strong> <%= @creation_date %>
  </p>
<% end %>

<% if @request_task.deadline_date %>
  <p>
    <strong>Плановая дата:</strong> <%= @deadline_date %>
  </p>
<% end %>

<% if @request_task.execution_date %>
  <p>
    <strong>Дата выполнения:</strong> <%= @execution_date %>
  </p>
<% end %>

<% if @request_task.audition_date %>
  <p>
    <strong>Дата проверки:</strong> <%= @audition_date %>
  </p>
<% end %>

<p>
  <strong>Описание заявки:</strong> <%= @request.description %>
</p>
<p>
  <strong>Описание:</strong> <%= @request_task.description %>
</p>
