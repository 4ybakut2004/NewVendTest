<h1>Типы поручений</h1>

<div class="btn-group" style="margin-bottom: 15px;">
  <button type="button" class="btn btn-default" data-toggle="modal" data-target="#newTask">Создать</button>
  <button type="button" class="btn btn-default" ng-click="deleteTasks()">Удалить</button>
</div>

<div fixedheader class="standart-table-container" ng-show="!editing">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th></th>
        <th>Номер</th>
        <th>Наименование</th>
        <th>Плановый срок (дней)</th>
      </tr>
      <tr>
        <td></td>
        <td><input ng-model="search.id" class="form-control input-sm"></td>
        <td><input ng-model="search.name" class="form-control input-sm"></td>
        <td><input ng-model="search.deadline" class="form-control input-sm"></td>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat="task in tasks | filter:search">
        <td><input type="checkbox" ng-model="task.checked"></td>
        <td ng-click="clickTask($index)">{{task.id}}</td>
        <td ng-click="clickTask($index)">{{task.name}}</td>
        <td ng-click="clickTask($index)">{{task.deadline}}</td>
      </tr>
    </tbody>
  </table>
</div>