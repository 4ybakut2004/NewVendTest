<form ng-submit="createTask()" class="form-horizontal">
  <div class="form-group"
    ng-class='{"has-warning": !inputs.name && !inputsErrors.name, 
               "has-success": inputs.name  && !inputsErrors.name,
               "has-error":   inputsErrors.name}'>
    <label class="col-sm-4 control-label" for="name">Наименование</label>
    <div class="col-sm-8">
      <input id="name"
        type="text"
        ng-model='newName'
        placeholder="Введите наименование"
        class="form-control">
      <div class="alert alert-danger alert-field" ng-show="inputsErrors.name">
        {{inputsErrors.name}}
      </div>
    </div>
  </div>

  <div class="form-group"
    ng-class='{"has-warning": !inputs.deadline && !inputsErrors.deadline,
               "has-success": inputs.deadline  && !inputsErrors.deadline,
               "has-error":   inputsErrors.deadline}'>
    <label class="col-sm-4 control-label" for="deadline">Плановый срок (дней)</label>
    <div class="col-sm-8">
      <input id="deadline"
        type="number"
        ng-model='newDeadline'
        placeholder="Введите плановый срок"
        class="form-control">
      <div class="alert alert-danger alert-field" ng-show="inputsErrors.deadline">
        {{inputsErrors.deadline}}
      </div>
    </div>
  </div>

  <div class="form-group"
      ng-class='{"has-success": inputs.solverId}'>
    <label class="col-sm-4 control-label" for="solverId">Решатель</label>
    <div class="col-sm-8">
      <select id="solverId"
        type="text"
        ng-options="employee.id as employee.name for employee in employees"
        ng-model='newSolverId'
        class="form-control">
        <option value=""></option>
      </select>
    </div>
  </div>

  <h3 class="text-center">Типы сигналов</h3>
  <ul class="non-point">
      <li ng-repeat="message in messages">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default" ng-click="check(message)">
          <input type="checkbox"> {{message.name}}
        </label>
      </div>
      </li>
  </ul>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-8">
      <input type="submit" value="Создать" class="btn btn-primary">
    </div>
  </div>
</form>

