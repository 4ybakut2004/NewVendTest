<form ng-submit="createTask()" class="form-horizontal">
  <div class="form-group" ng-class='{"has-warning": !inputs.name, "has-success": inputs.name}'>
    <label class="col-sm-4 control-label" for="name">Наименование</label>
    <div class="col-sm-8">
      <input id="name" type="text" ng-model='newName' placeholder="Введите наименование" class="form-control" ng-required="true">
    </div>
  </div>

  <div class="form-group" ng-class='{"has-warning": !inputs.deadline, "has-success": inputs.deadline}'>
    <label class="col-sm-4 control-label" for="deadline">Плановый срок (дней)</label>
    <div class="col-sm-8">
      <input id="deadline" type="number" ng-model='newDeadline' placeholder="Введите плановый срок" class="form-control" ng-required="true">
    </div>
  </div>

  <h3 class="text-center">Типы сигналов</h3>
  <ul class="non-point">
      <li ng-repeat="message in messages">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default" ng-click="check(message)">
          <input type="checkbox"> {{message.name}}
        </label>
      </div>
      </li>
  </ul>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-8"><input type="submit" value="Создать" class="btn btn-primary"></div>
  </div>
</form>

