<div ng-show="editing" class="border-top">
<button type="button" class="close" ng-click="editing=false">&times;</button>
  <h1 class="text-center">Тип поручения {{editingId}}</h1>
  <form ng-submit="updateTask()" class="form-horizontal">

    <div class="form-group"
      ng-class='{"has-warning": !editingInputs.name, "has-success": editingInputs.name}'>
      <label class="col-sm-2 control-label" for="name">Наименование</label>
      <div class="col-sm-8">
        <input id="name"
          type="text"
          ng-model='editingName'
          placeholder="Введите наименование"
          class="form-control"
          ng-required="true">
      </div>
    </div>

    <div class="form-group"
      ng-class='{"has-warning": !editingInputs.deadline, "has-success": editingInputs.deadline}'>
      <label class="col-sm-2 control-label" for="deadline">Плановый срок (дней)</label>
      <div class="col-sm-8">
        <input id="deadline"
          type="number"
          ng-model='editingDeadline'
          placeholder="Введите плановый срок"
          class="form-control"
          ng-required="true">
      </div>
    </div>

    <div class="form-group"
      ng-class='{"has-success": editingInputs.solverId}'>
      <label class="col-sm-2 control-label" for="solverId">Решатель</label>
      <div class="col-sm-8">
        <select id="solverId"
          type="text"
          ng-options="employee.id as employee.name for employee in employees"
          ng-model='editingSolverId'
          class="form-control">
          <option value=""></option>
        </select>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
        <input type="submit" value="Сохранить" class="btn btn-primary">
        <button type="button" class="btn btn-primary" ng-click="editing=false">Отмена</button>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
          <table class="table table-striped table-hover table-condensed table-bordered">
            <thead>
              <tr>
                <th>Типы сигналов</th>
              </tr>
            </thead>

            <tbody>
              <tr ng-repeat="message in taskMessages">
                <td>{{message}}</td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </form>
</div>