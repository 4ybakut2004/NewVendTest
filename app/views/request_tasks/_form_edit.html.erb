<script type="text/javascript">
  $(document).ready(function() {
    $('.datetime').datetimepicker({
      lang: 'ru',
      mask: true,
      format: 'd.m.Y H:i:s',
      dayOfWeekStart: 1,
      allowBlank: true
    });

    $('.datetimeminnow').datetimepicker({
      lang: 'ru',
      mask: true,
      format: 'd.m.Y H:i:s',
      dayOfWeekStart: 1,
      allowBlank: true,
      minDate: 0,
      onChangeDateTime:function(dp,$input){
        var now = new Date();
        var val = new Date($input.val().replace(/(\d+).(\d+).(\d+)/, '$2/$1/$3'));
        if(val < now) {
          $input.val(formattedDate(now));
        }
      }
    });
  });
</script>

<div ng-show="editing" class="border-top">
<button type="button" class="close" ng-click="editing=false">&times;</button>
  <h1 class="text-center">Поручение {{editingId}}</h1>
  <form ng-submit="updateRequestTask()" class="form-horizontal">
    <div class="row">
      <div class="col-md-8">
        <div class="form-group" ng-class='{"has-success": editingInputs.executorId}'>
          <label class="col-sm-3 control-label" for="executor_id">Исполнитель</label>
          <div class="col-sm-9">
            <select ng-model="editingExecutorId" 
              ng-options="employee.id as employee.name for employee in employees"
              class="form-control">
            </select>
          </div>
        </div>

        <div class="form-group" ng-class='{"has-success": editingInputs.auditorId}'>
          <label class="col-sm-3 control-label" for="auditor_id">Контролер</label>
          <div class="col-sm-9">
            <select ng-model="editingAuditorId" 
              ng-options="employee.id as employee.name for employee in employees"
              class="form-control">
            </select>
          </div>
        </div>

        <div class="form-group" ng-class='{"has-success": editingInputs.description}'>
          <label class="col-sm-3 control-label" for="description">Описание</label>
          <div class="col-sm-9">
            <input type="text" id="description" ng-model="editingDescription" class="form-control">
          </div>
        </div>

        <div class="form-group" ng-class='{"has-success": editingInputs.deadlineDate}' 
             ng-show="canEditDeadlineDate(<%= current_user.employee_id %>)">
          <label class="col-sm-3 control-label" for="deadline_date">Плановая дата</label>
          <div class="col-sm-9">
            <input type="text" id="deadline_date" step="1" ng-model="editingDeadlineDate" class="form-control datetimeminnow">
          </div>
        </div>

        <div class="form-group" ng-show="!canEditDeadlineDate(<%= current_user.employee_id %>)">
          <label class="col-sm-3 text-right" for="deadline_date">Плановая дата</label>
          <div class="col-sm-9 text-left" id="deadline_date">{{formattedDate(requestTasks[editingIdx].deadline_date)}}</div>
        </div>

        <div class="form-group" ng-class='{"has-success": editingInputs.executionDate}'>
          <label class="col-sm-3 control-label" for="execution_date">Дата выполнения</label>
          <div class="col-sm-9">
            <input type="text" id="execution_date" step="1" ng-model="editingExecutionDate" class="form-control datetime">
          </div>
        </div>

        <div class="form-group" ng-class='{"has-success": editingInputs.auditionDate}'>
          <label class="col-sm-3 control-label" for="audition_date">Дата проверки</label>
          <div class="col-sm-9">
            <input type="text" id="audition_date" step="1" ng-model="editingAuditionDate" class="form-control datetime">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-9"><input type="submit" value="Сохранить" class="btn btn-primary"></div>
        </div>
      </div>
      <div class="col-md-4">
        <h4><label>Информация по заявке</label></h4>
        <ul class="non-point">
          <li>
            <strong>Номер:</strong>
            {{editingRequest.id}}
          </li>
          <li>
            <strong>Регистратор:</strong>
            {{editingRequest.registrar_name}}
          </li>
          <li>
            <strong>Дата регистрации:</strong>
            {{formattedDate(editingRequest.created_at)}}
          </li>
          <li>
            <strong>Автомат:</strong>
            {{editingRequest.machine_name}}
          </li>
          <li>
            <strong>Описание:</strong>
            {{editingRequest.description}}
          </li>
          <li>
            <strong>Тип заявки:</strong>
            {{editingRequest.request_type_name}}
          </li>
          <li ng-show="editingRequest.request_type == 'phone'">
            <strong>Телефон:</strong>
            {{editingRequest.phone}}
          </li>
        </ul>
        <br>
        <h4><label>Атрибуты</label></h4>
        <ul class="non-point">
          <li ng-repeat="attribute in editingAttributes">
            <strong>{{attribute.name}}:</strong>
            {{attribute.value}}
          </li>
        </ul>
      </div>
    </div>
  </form>
</div>